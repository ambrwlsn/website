---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - post
    - tagList
    - bookReview
    - wilt
  addAllPagesToCollections: true
permalink: /tags/{{ tag }}/
layout: main.njk
title: Posts by Amber Wilson tagged with '{{ tag }}'
description: Posts by Amber Wilson tagged with '{{ tag }}'
---
<div class="wrapper tags-wrapper">
  <h1 class="tags-title">All posts tagged with “{{ tag }}”</h1>
  <ul>
    {% set taglist = collections[tag] %}
    {% for post in taglist | reverse %}
      <li>
        <a href="{{ post.url | url }}">{{ post.data.title }}</a>
      </li>
    {% endfor %}
  </ul>
</div>