        <a href="{{ p.url }}">{{ p.data.title }}</a>
        <p><time class="recent-posts-list-time">{{ p.data.date | readableBlogListDate }}</time></p>
        <p class="recent-posts-list-excerpts">        
            {% if p.data.excerpt %}
            {{ p.data.excerpt | toHTML | safe }}â€¦
            {% else %}
            {{ p.templateContent | getExcerpt }}
            {% endif %}
        </p>
    </li>
    {% endfor %}
</ul>

