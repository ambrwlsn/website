{% from "macros/githubIconSVG.njk" import githubIconSVG %} 
{% from "macros/twitterIconSVG.njk" import twitterIconSVG %}
{% from "macros/linkedInIconSVG.njk" import linkedInIconSVG %}

<div class="homepage-info">
    <img class="homepage-avatar" src="/img/avatar.png" alt="Digitally-drawn avatar of Amber" />
    <h1 class="homepage-title">Hi, I'm Amber, nice to meet you!</h1>
</div>

<h2 class="homepage-description">Check out my latest posts</h2> 

<ul class="recent-posts-list" role="list">
    {% for p in collections.posts | reverse | limit(3) %}
    <li>
        <a class="recent-posts-list-item-title" href="{{ p.url }}">{{ p.data.title }}</a>
        <p><time class="recent-posts-list-time">{{ p.data.date | readableBlogListDate }}</time></p>
        <p class="recent-posts-list-excerpts">        
            {% if p.data.excerpt %}
            {{ p.data.excerpt | toHTML | safe }}â€¦
            {% else %}
            {{ p.templateContent | getExcerpt }}
            {% endif %}
        </p>
    </li>
    {% endfor %}
</ul>

<p class="read-more-link">
    <a href="blog">Read more</a>
</p>

