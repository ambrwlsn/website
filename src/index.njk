--- 
title: Amber's Site 
eleventyExcludeFromCollections: true
description: Hi, I'm Amber, welcome to my site!
---
{% from "macros/githubIconSVG.njk" import githubIconSVG %}
{% from "macros/twitterIconSVG.njk" import twitterIconSVG %}
{% from "macros/linkedInIconSVG.njk" import linkedInIconSVG %}

<div class="homepage-wrapper">
    <div>
        <div class="homepage-info">
            <picture>
                <img class="homepage-avatar" src="/img/avatar.png" alt="Digitally-drawn avatar of Amber" width=125 height=125/>
            </picture>
            <h1 class="title homepage-title">Hi, I'm Amber, welcome to my site!</h1>
        </div>

        <h2 class="homepage-description">Latest blog posts</h2>

        <ul class="recent-posts-list" role="list">
            {% for p in collections.posts | reverse | limit(3) %}
                <li>
                    <a class="recent-posts-list-item-title" href="{{ p.url }}" aria-label="A blog post - {{ p.data.title }}">{{ p.data.title }}</a>
                    <time class="recent-posts-list-time">{{ p.data.date | readableBlogListDate }}</time>
                    <p>
                        {% if p.data.excerpt %}
                            {{ p.data.excerpt | toHTML | safe }}â€¦
            {% else %}
                            {{ p.templateContent | getExcerpt }}
                        {% endif %}
                    </p>
                    <p class="tags recent-blog-list-tags">
                        {% for tag in p.data.tags %}
                            {%- if collections.tagList.indexOf(tag) != -1 -%}
                                {% set tagUrl %}/tags/{{ tag }}/{%endset %}
                                <a href="{{ tagUrl | url }}" aria-label="{{ tag }} tag">{{ tag }}</a>
                            {%- endif -%}
                        {% endfor %}
                    </p>
                </li>
            {% endfor %}
        </ul>

        <p class="read-more-link">
            <a href="blog">Read more<span class="read-more-arrow">&nbsp;&#8594;</span></a>
        </p>

        <p class="contact-links contact-links-home">
            <a href="https://github.com/ambrwlsn">
                {{ githubIconSVG() }}
            </a>
            <a href="https://twitter.com/ambrwlsn90">
                {{ twitterIconSVG() }}
            </a>
            <a href="https://www.linkedin.com/in/ambrwlsn90/">
                {{ linkedInIconSVG() }}
            </a>
        </p>
        <footer role="contentinfo">
            <p class="made-with">
                <span>Made in Berlin</span>&nbsp;
                <span role='img' aria-label="German flag emoji">&#x1F1E9;&#x1F1EA;</span>&nbsp;
                <span>with</span>&nbsp;
                <a href="https://www.11ty.dev/">Eleventy</a>&nbsp;
                <span>& hosted on</span>&nbsp;
                <a href="https://www.netlify.com/"> Netlify</a>.
        </p>
        </footer>
    </div>
</div>