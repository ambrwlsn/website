<h2>Blog List!</h2>

<p>
    <a style="color: orange; text-decoration: underline; font-size: 2em;
    font-weight: 900; padding-left: 1em;" href="/tags">All tags!</a>
</p>

<ul>
{% for p in collections.posts | reverse %}
<li>
    <a href="{{ p.url }}">{{ p.data.title }}</a>
    <p>{{ p.data.date | readableBlogListDate }}</p>
    {% if p.data.excerpt %}
     <p>{{ p.data.excerpt | toHTML | safe }}â€¦</p>
    {% else %}
    <p>{{ p.templateContent | getExcerpt }}</p>
    {% endif %}    
</li>
{% endfor %}
</ul>